{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "rootDir": "src",
        "outFile": "maze.js",
        "noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

        "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
        "moduleResolution": "node",

        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "src/**/*.ts"
    ]
}
